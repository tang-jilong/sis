<div class="fieldsets_table0">
    <fieldset>
        <legend>
             <%= I18n.t('insurance.index.title')%> 
        </legend>
        <% if @insurace_arry!=nil&&@insurace_arry.size>0 %>
		 <table class="tablesorter" cellspacing="1">
            <thead>
			 <tr>
		        <th>
		           <%= I18n.t('insurance.index.name')%>
		        </th>
				<th>
		            <%= I18n.t('insurance.index.date')%>
		        </th>
				<th>
		            <%= I18n.t('insurance.index.housing_fund')%>
		        </th>
				<th>
		            <%= I18n.t('insurance.index.unemployment')%>
		        </th>
				<th>
		            <%= I18n.t('insurance.index.pension')%>
		        </th>
				<th>
		            <%= I18n.t('insurance.index.basic_medical')%>
		        </th>
		    </tr>
		</thead>
		<tbody>
		    <% @insurace_arry.each do |item| %>
		    <tr>
		        <td>
		            <%= item.name%>
		        </td>
				<td>
		            <%= item.issue_date.strftime("%Y-%m-%d")%>
		        </td>
				<td>
		            <%= item.housing_fund%>
		        </td>
				<td>
		            <%= item.unemployment%>
		        </td>
				<td>
		            <%= item.pension%>
		        </td>
				<td>
		            <%= item.basic_medical%>
		        </td>
		    </tr>
		    <% end %>
			</tbody>
		</table>
		<div>
			<p>
			<%= will_paginate @insurace_arry, {:class=>'flickr_pagination'}%>  
			</p>
			<table class="tablesorter" cellspacing="1">
			<thead>
				<tr>
					<th>
						 <%= I18n.t('insurance.temp.name')%> 
					</th>
					<th>
						<%= I18n.t('insurance.temp.date')%> 
					</th>
					<th>
						<%= I18n.t('insurance.temp.total_fund')%> 
					</th>
					<th>
						<%= I18n.t('insurance.temp.total_unemployment')%> 
					</th>
					<th>
						<%= I18n.t('insurance.temp.total_pension')%> 
					</th>
					<th>
						<%= I18n.t('insurance.temp.total_medical')%> 
					</th>
				</tr>
			</thead>
			<tbody>
					<% @insurace_arry_total.each do |total|%>
				<tr>
					<td>
						<%= session[:user_name]%>
					</td>
					<td>
						<%= I18n.t('filter.temp.util')%> <%= Time.now.strftime("%Y-%m-%d")%>
					</td>
					<td>
						<%= total.housing_fund%>
					</td>
					<td>
						<%= total.unemployment%>
					</td>
					<td>
						<%= total.pension%>
					</td>
					<td>
						<%= total.basic_medical%>
					</td>
				</tr>
				<% end%>
			</tbody>
		</table>
			<p class="icons" align="center">
				<a><%= link_to image_tag("icons/download_icon.png", :alt=>"Download", :title=>"Download"), {:action => 'temp_generate_insuarance_excel'}%></a>
			</p>	
		</div>
		<% else %>
		 <p>
             <%= I18n.t('insurance.index.message')%>
        </p>
        <% end %>
    </fieldset>
</div>