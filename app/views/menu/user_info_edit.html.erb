<div class="fieldsets_table2">
    <fieldset>
        <legend>
            <%= I18n.t('users.edit.title') %>
        </legend>
	<% form_for :user, :url => {:controller=>'menu',:action => :update_user } do |f| %>
        <%= f.error_messages %>
        <table>
            <tr>
                <td>
                    <%= f.label I18n.t('users.edit.name') %>
				</td>
				<td>
                    <%= f.text_field :name %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label I18n.t('users.edit.password') %>
				</td>
				<td>
                    <%= f.password_field :password %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label I18n.t('users.edit.password_confirmation') %>
				</td>
				<td>
                    <%= f.password_field :password_confirmation %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label I18n.t('users.edit.email') %>
				</td>
				<td>
                    <%= f.text_field :email %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label I18n.t('users.edit.birthday') %>
				</td>
				<td>
                    <input class="wdate" type="text" name="birthday" onclick="SelectDate(this,'yyyy-MM-dd')" value=<%=@birthday%>>
                </td>
            </tr>
            <tr>
                <td>
                   <%= f.label I18n.t('users.index.remark') %>
				</td>
				<td>
                    <%= f.text_area :remark %>
                </td>
            </tr>
			<tr>
				<td>
				</td>
				<td class="buttons">
					    <%= f.submit I18n.t('users.index.update'),:class => "button" %>
                or <%= link_to I18n.t('application.cancel'), :controller=>"login", :action=> "index" %>
				</td>
			</tr>
			</table>
            <% end %>
            </fieldset>
        </div>
