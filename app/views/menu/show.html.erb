<div class="fieldsets_table0" id="bulletin_info">
    <fieldset>
        <legend>
           <%= I18n.t('menu.show.title')%> 
        </legend>
		<table>
		<tr>
			<td>
				<b><%= I18n.t('menu.show.name')%>:</b>
			</td>
			<td>
				<%=h @bulletin.title %>	
			</td>
		</tr>
		<tr>
			<td>
				<b><%= I18n.t('menu.show.issue_date')%>:</b>	
			</td>
			<td>
				 <%=h @bulletin.issue_date.strftime("%Y-%m-%d")%>	
			</td>
		</tr>
		<tr>
			<td>
			  <b><%= I18n.t('menu.show.content')%>:</b>	
			</td>
			<td>
				<%= @bulletin.content %>	
			</td>
		</tr>
		<tr>
			<td>
				 <b><%= I18n.t('menu.show.autor')%>:</b>	
			</td>
			<td>
				<%=h @bulletin.autor %>
			</td>
		</tr>
            
        <tr>
        	<td></td>
			<td class="buttons">
				<a href="#" onclick="window.top.hidePopWin();return false;"  class="button"><%= I18n.t('comparator.addto.button')%></a>	
			</td>
        </tr>   
		</table>
    </fieldset>

</div>